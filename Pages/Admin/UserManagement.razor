@page "/admin/users"
@attribute [Authorize(Roles = "Admin")]

<h3>User Management</h3>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in users)
        {
            <tr>
                <td>@user.Username</td>
                <td>@user.Role</td>
                <td>
                    <button @onclick="() => ResetPassword(user.Id)" class="btn btn-warning">Reset Password</button>
                    <button @onclick="() => ViewProgress(user.Id)" class="btn btn-info">View Progress</button>
                </td>
            </tr>
        }
    </tbody>
</table>

